<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fefefe"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/back_layout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ib_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="45dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="关于"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_below="@+id/back_layout"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGary"
        android:alpha="1"/>
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:contentPadding="4dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:layout_height="80dp"
            android:background="#ffffff"
            android:src="@drawable/ic_logo"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivLogo"
        android:layout_alignRight="@+id/ivLogo"
        android:layout_below="@id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#fefefe"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUrl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#fefefe"
        android:gravity="center"
        android:text="及时币资讯，一网打尽"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/tv_give_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dec"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dec"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="#fefefe"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="请作者喝杯咖啡吧~(点击复制地址↓)️"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coffe_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="#fefefe"
                android:drawableLeft="@mipmap/icon_alipay"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="Alipay"
                android:textColor="#1ea2f5"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/coffe_eth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="#fefefe"
                android:drawableLeft="@mipmap/icon_eth"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="Eth"
                android:textColor="#DAA520"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/coffe_btc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="#fefefe"
                android:drawableLeft="@mipmap/icon_btc"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="Btc"
                android:textColor="#f79e3f"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_give_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#fefefe"
        android:drawablePadding="8dp"
        android:padding="14dp"
        android:text="说明:\n\n\t\tMore Coin所有资源来源于公开的网络抓取；\n\t\t如资源有版权争议请及时联系420245103@qq.com；\n\t\tApp持续更新中，有产品意见可及时反馈；"
        android:textColor="#333"
        android:textSize="15sp"/>
</RelativeLayout>
